{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false                                /* Skip type checking all .d.ts files. */
  },
  "include": ["lib"],
  "exclude": ["node_modules", "test", "examples", "docs"]
}
